<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.oliverace.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="150px">

        <TextView
            android:text="Últimos locais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msgs"
            android:layout_alignEnd="@+id/profile_name"
            android:layout_marginEnd="41dp"
            android:layout_marginTop="57dp"
            android:id="@+id/textView8" />

        <TextView
            android:text="Últimas postagens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignEnd="@+id/imageView2" />

        <TextView
            android:text="Você possui 7 mensagens não lidas."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msgs"
            tools:text="Você possui 7 mensagens não lidas."
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="118dp"
            app:srcCompat="@mipmap/avatar"
            android:id="@+id/imageView2"
            android:paddingLeft="5px"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textView8"
            android:layout_marginEnd="95dp" />

        <TextView
            android:text="Carlos Eduardo"
            android:layout_width="212dp"
            android:id="@+id/profile_name"
            android:textAlignment="center"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:textColor="@color/cast_expanded_controller_progress_text_color"
            android:textStyle="normal|bold"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="41dp"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</FrameLayout>
